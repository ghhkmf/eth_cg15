<scene>
	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="128"/>
	</sampler>

	<!-- Use the average visibility integrator -->
	<!-->
	<integrator type="path_mats">
	</integrator>
	
	<-->
	<integrator type="photonmapper">
		<float name="photonRadius" value="0.08"/>
		<integer name="photonCount" value="400000"/>
	</integrator>
	

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="1, 2.75, -.2" 
			        origin="6,2.7, 1"	        
			        up="0, 1, 0"/>
			        <!-->
			        x:zoom,y:up,z:left,right
			        target="1, 2, 0" 
			        origin="4.2,3, 2.5"  
			        <-->
		</transform>

		<!-- Field of view: 40 degrees -->
		<float name="fov" value="70"/>

		<!-- 800x600 pixels -->
		<integer name="width" value="960"/>
		<integer name="height" value="540"/>
	</camera>


	<!-- emitters-->

	<mesh type="obj">
		<string name="filename" value="emitter.obj"/>
		<emitter type="area">
			<color name="radiance" value="8,8,8"/>
		</emitter>
	</mesh>

	<emitter type="spot">
		<point name="position" value = "1.5,3.12894,1.33235"/>
		<color name="power" value="200,200,200"/>
		<float name="cosFalloffStart" value=".7"/>
		<float name="cosTotalWidth" value=".4"/>
		<vector name="direction" value = "-.0012,-.6448,-2.1935"/>
	</emitter>


	<!-- Walls -->
	<mesh type="obj">
		<string name="filename" value="rightWall.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".95,.95,.95"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="leftWall.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".95,.95,.95"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="ceiling.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".95,.95,.95"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="floor.obj"/>
		<bsdf type="diffuse">
			<color name="albedo" value=".3,.1,0"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="backWall.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".95,.95,.95"/>
		</bsdf>
	</mesh>	
	<mesh type="obj">
		<string name="filename" value="frontWall.obj"/>
		<bsdf type="diffuse">
				<texture type="imgTexture_color" name="albedo">
						<point name="delta" value="0.05,0.15"/>
						<point name="shift" value=".2,.2"/>						
						<vector name="scale" value="25,25"/>
						<color name="points" value=".9,.7,.5"/>
						<color name="stripes" value=".8,.5,.2"/>
						<color name="back" value="1,.9,.6"/>
				</texture>
		</bsdf>
	</mesh>	



	<!-- Table-->
	<mesh type="obj">
		<string name="filename" value="legs.obj"/>
		<bsdf type="diffuse">
			<color name="albedo" value="0.5,.3,0"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="table.obj"/>		
		<bsdf type="microfacet">
			<color name="kd" value="0.5, .2, 0.1"/>
			<float name="alpha" value="0.005"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="paper.obj"/>
		<bsdf type="microfacet">
			<color name="kd" value="0.9, 0.9, 0.9"/>
			<float name="alpha" value="0.005"/>
		</bsdf>
	</mesh>



	<!-- lamp-->
	<mesh type="obj">
		<string name="filename" value="lampBase.obj"/>

		<bsdf type="mirror">
			<color name="albedo" value=".8,.8,.8"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="lampRod1.obj"/>

		<bsdf type="mirror">
			<color name="albedo" value=".8,.8,.8"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="lampRod2.obj"/>

		<bsdf type="mirror">
			<color name="albedo" value=".8,.8,.8"/>
		</bsdf>
	</mesh>
		<mesh type="obj">
		<string name="filename" value="bulbHolder.obj"/>

		<bsdf type="mirror">
			<color name="albedo" value=".8,.8,.8"/>
		</bsdf>
	</mesh>	

	<!-- aquarium-->	

	<mesh type="obj">
		<string name="filename" value="sphereHolder.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".01,.01,.9"/>
		</bsdf>
	</mesh>
	
	<mesh type="sphere">
		<point name="center" value="1.4988,2.48416,-0.86119"/>
		<float name="radius" value=".995288"/>
		<bsdf type="dielectric">
			<float name="extIOR" value="1"/>
			<float name="intIOR" value="1.5"/>
		</bsdf>
	</mesh>

