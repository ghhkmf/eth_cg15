		<string name="filename" value="clock.obj"/>

		<bsdf type="microfacet">
			<color name="kd" value="0.1, .1, 0.1"/>
			<float name="alpha" value="0.005"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="hour.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".9,.7,.1"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="minute.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value=".9,.7,.1"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
